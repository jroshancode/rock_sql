-- Left Join , Right JOin 

-- Left Join ( all info from left table + matching records from right talbe ) 

select u.*,o.*
from users as u
left join Orders as o on o.UserId = u.UserId


-- from => join => where => gropu by => having => select => order by => limit or offset

