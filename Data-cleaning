-- b) Removing Duplicates
SELECT column_name, COUNT(*) FROM your_table
GROUP BY column_name
HAVING COUNT(*) > 1;

Delete duplicates (keep only one row):

-- Fixing Formatting Issues , Convert to lowercase or uppercase:

-- d) Standardizing Data
UPDATE your_table
SET country = 'United States'
WHERE country IN ('USA', 'U.S.A.', 'US', 'United States of America');

