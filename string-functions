-- 2025 - 07-  29 
use my_db;

select * from housing_price;

select LandUse, count(LandUse) 
from housing_price group by LandUse

-- Landuse 
select LandUse , concat(upper(left(LandUse,1)),"",lower(right(LandUse,length(LandUse)-1)) ) 
from housing_price

select LandUse , concat(Upper(substr(Landuse,1,1)), lower(substring(Landuse,2,length(LandUse))) )
from housing_price


-- Search Months name( April and July )  in my Sale DaTE COLUMN 

with month_name as ( 
select SaleDate, SalePrice, locate("April",SaleDate) as april ,instr(SaleDate,"July") as july,
PropertyAddress , TotalValue  , BuildingValue
FROM housing_price ) 

select * from month_name where april = 1 or july = 1

select * from housing_price;

select Purchase_Amount, round(Purchase_Amount,1),truncate(Purchase_Amount,1)
from ecommerce_transactions




use my_db;

select * from employee_data;

select count(*) from employee_data;
alter table employee_data rename column AdEmail to email;
-- get last three charactor form email fields
select email , right(email,3) from employee_data;

-- get the positin of @, . , com and in

select * from (
select email, position("@" in email) as a , locate(".",email) as b,instr(email,'in') as c,
 instr(email,'com') d
from employee_data ) as etc 
where a is not null or b is not null or c is not null or d is not null

-- select the domain name from the email column  and how many time occure these all domain name 
select abc, count(abc) from ( 
select email, substr(email,locate("@",email)+1,length(email)-4) as abc,
locate("@",email) , length(email)-4
from employee_data ) as etc 
group by abc



