use my_db;

select * from train;

-- Lower or upper or length, char_length
select `Customer Name`,upper(`Customer Name`), lower(`Customer Name`),
length(`Customer Name`),char_length(`Customer Name`)
from train

-- left , rignt and concat 
 
 select `Customer Name`, left(`Customer Name`,5),right(`Customer Name`,5), concat("abc"," ",`Customer Name`),
 concat_ws(" ","abc",`Customer Name`,"Pqr")
 from train;
 
-- first letter is capital and rest of these small for Country
select Country, upper(left(Country,1)) , lower(right(country,length(Country)-1)),
concat_ws("" , upper(left(Country,1)) , lower(right(country,length(Country)-1)) ) 
from train




-- reverse , replace 
select `Ship Date`,replace(`Ship Date`,'-','@'), Segment, reverse(Segment)
from train

-- Substring extraction & position 
-- substr( string, pos,len) , substring(str,pos,len)
select `Customer Name`, substr(`Customer Name`,2,20),
substring(`Customer Name`,2,5)
from train 

-- First letter is capital and rest of these small for Customer Name 
select `Customer Name`, concat_ws("",upper(substr(`Customer Name`,1,1)),
lower(substr(`Customer Name`,2,length(`Customer Name`))) )
from train 

-- Searching 
-- position, locate,instr
select `Customer Name`, position(" " in `Customer Name`), locate(" " , `Customer Name`) ,
instr(`Customer Name`," ") 
from train

select  position("@" in "abc@yahoo.com"), locate("." , "abc@yahoo.com") ,
instr("abc@yahoo.com","com")

-- trim ,ltrim, rtirm, lpad, rpad

select trim("   dkfdj  "), rtrim("   dkfdj  "), ltrim("   dkfdj  ")
